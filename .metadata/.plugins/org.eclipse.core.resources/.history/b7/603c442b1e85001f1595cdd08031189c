<?xml version="1.0" encoding="UTF-8"?>

<!-- dtd설정 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

	
	<mapper namespace="mapper.member">
	
	<insert id="insertMember" parameterType="member"> 
		<![CDATA[
			insert member
			 values(#{userid},#{passwd},#{username},#{post},#{addr1},#{addr2},#{phone1},#{phone2},#{phone3},#{email1},#{email2})
		]]>
	</insert>

	  
	<select id="selectMember" parameterType="String" resultType="member">
		<![CDATA[
			select * from member where userid=#{userid}
		]]>
	
	</select>
	
	<!-- idCheck는 seletMember 쿼리를 활용했지만, 선생님은 카운트를 활용 -->
	<select id="idCheck" parameterType="String" resultType="Integer">
		<![CDATA[
			select count(*) member where userid=#{userid}
		]]>
			
	</select>
	
	
	<!-- 동적 쿼리문 -->
	<!-- 동적 쿼리문에서는 <![CDATA[]]> 사용할 수 없다. -->
	<update id="updateMember" parameterType="member">
	 update member
	 <set>
	 	<if test="passwd !=null">passwd=#{passwd},</if>
	 	<if test="post !=null">post=#{post},</if>
	 	<if test="addr1 !=null">addr1=#{addr1},addr2=#{addr2},addr3=#{addr3},</if>
	 	<if test="email1 !=null">email1=#{email1},email2=#{email2}</if>
	 </set>
	 where userid=#{userid}
	</update>
	
</mapper>